{
    "name": "federicoalbanese/rbac",
    "description": "Role-base access control",
    "keywords": [
        "federicoalbanese",
        "rbac"
    ],
    "homepage": "https://github.com/federicoalbanese/rbac",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alireza",
            "email": "alirezarohany9@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Iman",
            "email": "ipvz@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Adambarfi\\Rbac\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Federicoalbanese\\Rbac\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Adambarfi\\Rbac\\RbacServiceProvider"
            ],
            "aliases": {
                "Rbac": "Adambarfi\\Rbac\\RbacFacade"
            }
        }
    }
}
